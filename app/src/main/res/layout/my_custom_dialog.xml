<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/customDialog_root_element">

    <FrameLayout
        android:id="@+id/closeButtonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close_black_24dp"
        android:layout_gravity="top|end"
        android:clickable="true"
        android:id="@+id/closeButton" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/closeButtonlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lowest Price"
                    android:inputType="number"
                    android:id="@+id/lowestprice"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Highest Price"
                    android:inputType="number"
                    android:id="@+id/highestprice"/>

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:text="5 Stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/s5"/>

            <CheckBox
                android:text="4 Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s4" />
            <CheckBox
                android:text="3 Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s3" />
            <CheckBox
                android:text="2 Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s2" />
            <CheckBox
                android:text="1 Star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s1" />
            <CheckBox
                android:text="No Stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s0" />

        </LinearLayout>

    </ScrollView>




</RelativeLayout>